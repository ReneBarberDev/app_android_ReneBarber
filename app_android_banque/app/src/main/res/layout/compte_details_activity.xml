<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Arrière-plan dégradé -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_background"
        android:scaleType="fitXY"/>

    <!-- Image du compte -->
    <ImageView
        android:id="@+id/imageViewCompte"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/default_image" /> <!-- Image par défaut, à remplacer par une image réelle -->

    <!-- Section des détails -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewCompte"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Numéro -->
        <TextView
            android:id="@+id/textViewNumeroLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numéro:"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="18sp" />

        <!-- Solde -->
        <TextView
            android:id="@+id/textViewSoldeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solde:"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewSolde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="18sp" />

        <!-- Devise -->
        <TextView
            android:id="@+id/textViewDeviseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devise:"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewDevise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Bouton -->
    <Button
        android:id="@+id/buttonBackToMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu Principal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_rectangular"/>
</RelativeLayout>
